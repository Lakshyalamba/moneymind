generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  transactions Transaction[]
  goals        Goal[]
}

model Transaction {
  id       Int     @id @default(autoincrement())
  amount   Float
  type     String // 'income' or 'expense'
  category String
  note     String?
  date     String
  userId   Int
  user     User    @relation(fields: [userId], references: [id])
}

model Goal {
  id            Int    @id @default(autoincrement())
  title         String
  targetAmount  Float
  currentAmount Float  @default(0)
  deadline      String
  userId        Int
  user          User   @relation(fields: [userId], references: [id])
}
